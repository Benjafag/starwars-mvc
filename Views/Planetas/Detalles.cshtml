@using StarWars.ViewModels
@model PlanetaDetallesVM

@{
  ViewData["Title"] = Model.Nombre;
}

<div class="sw-page p-3 p-md-4">

  <!-- Header -->
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
    <a asp-controller="Planetas" asp-action="Index"
       class="btn btn-outline-warning btn-sm sw-btn">
      ← Volver
    </a>

    <span class="badge rounded-pill text-bg-dark border border-warning-subtle">
      Registro Planetario
    </span>
  </div>

  <!-- Top: imagen + ficha -->
  <div class="row g-4 align-items-start">
    <aside class="col-12 col-lg-5">
      <article class="card sw-card overflow-hidden shadow-sm">
        <img src="@(Model.Foto ?? "/images/placeholder.png")"
             alt="Foto de @Model.Nombre"
             class="w-100"
             style="aspect-ratio: 11 / 11; object-fit: cover;" />
        <div class="sw-holo"></div>
      </article>

      @* <div class="d-flex flex-wrap gap-2 mt-3">
        <span class="badge text-bg-dark border border-warning-subtle">@Model.SistemaEstelar</span>
        <span class="badge text-bg-dark border border-info-subtle">@Model.Region</span>
        <span class="badge text-bg-warning text-dark">@Model.Tipo</span>
      </div> *@
    </aside>

    <section class="col-12 col-lg-7">

      <header class="mb-3">
        <h1 class="display-6 fw-bold mb-1 sw-title">@Model.Nombre</h1>
        <p class="text-muted mb-0">Sistema @Model.SistemaEstelar • Región @Model.Region</p>
      </header>

      <div class="card sw-card">
        <div class="card-body p-4">
          <h2 class="h6 text-uppercase text-muted mb-3">Ficha</h2>

          <div class="d-flex flex-column gap-2 small">

            <div class="d-flex justify-content-between gap-3">
              <span class="text-muted">Tipo</span>
              <span class="sw-field text-end">@Model.Tipo</span>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Clima))
            {
              <div class="d-flex justify-content-between gap-3">
                <span class="text-muted">Clima</span>
                <span class="sw-field text-end">@Model.Clima</span>
              </div>
            }

            @if (Model.Gravedad.HasValue)
            {
              <div class="d-flex justify-content-between gap-3">
                <span class="text-muted">Gravedad</span>
                <span class="sw-field text-end">@Model.Gravedad.Value</span>
              </div>
            }

            @if (Model.PoblacionAproximada.HasValue)
            {
              <div class="d-flex justify-content-between gap-3">
                <span class="text-muted">Población aprox.</span>
                <span class="sw-field text-end">@Model.PoblacionAproximada.Value.ToString("N0")</span>
              </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Gobierno))
            {
              <div class="d-flex justify-content-between gap-3">
                <span class="text-muted">Gobierno</span>
                <span class="sw-field text-end">@Model.Gobierno</span>
              </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Capital))
            {
              <div class="d-flex justify-content-between gap-3">
                <span class="text-muted">Capital</span>
                <span class="sw-field text-end">@Model.Capital</span>
              </div>
            }

          </div>
        </div>
      </div>
    </section>
  </div>

  <hr class="border-warning-subtle my-4" />

  <!-- Eventos -->
  <section class="mb-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
      <h2 class="h5 mb-0 text-warning sw-section-title">Eventos</h2>
      <span class="text-muted small">@(Model.Eventos?.Count ?? 0)</span>
    </div>

    @if (Model.Eventos != null && Model.Eventos.Any())
    {
      <div class="row g-3">
        @foreach (var ev in Model.Eventos)
        {
          <div class="col-12 col-md-6 col-xl-4">
            <article class="card sw-card sw-hover h-100 overflow-hidden">
              @if (!string.IsNullOrWhiteSpace(ev.Imagen))
              {
                <img src="@ev.Imagen"
                     alt="@ev.Titulo"
                     class="w-100"
                     style="aspect-ratio: 16 / 9; object-fit: cover;" />
              }

              <div class="card-body">
                <h3 class="h6 mb-1 sw-title">@ev.Titulo</h3>

                @if (!string.IsNullOrWhiteSpace(ev.Fecha))
                {
                  <div class="text-muted small">@ev.Fecha</div>
                }
              </div>
            </article>
          </div>
        }
      </div>
    }
    else
    {
      <div class="card sw-card">
        <div class="card-body">
          <span class="text-muted">No hay eventos registrados para este planeta.</span>
        </div>
      </div>
    }
  </section>

  <!-- Personajes -->
  <section class="mb-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
      <h2 class="h5 mb-0 text-warning sw-section-title">Personajes</h2>
      <span class="text-muted small">@(Model.Personajes?.Count ?? 0)</span>
    </div>

    @if (Model.Personajes != null && Model.Personajes.Any())
    {
      <div class="row g-3">
        @foreach (var p in Model.Personajes)
        {
          <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a asp-controller="Personajes" asp-action="Detalles" asp-route-id="@p.IdPersonaje"
               class="text-decoration-none text-reset d-block h-100">
              <article class="card sw-card sw-hover h-100 text-center">
                <div class="card-body p-3 d-flex flex-column align-items-center">
                  <img src="@p.Foto"
                       alt="@p.Nombre"
                       class="rounded-circle border shadow-sm mb-2"
                       style="width: 84px; height: 84px; object-fit: cover; object-position: top;" />
                  <span class="small fw-semibold text-truncate w-100">@p.Nombre</span>
                </div>
              </article>
            </a>
          </div>
        }
      </div>
    }
    else
    {
      <div class="card sw-card">
        <div class="card-body">
          <span class="text-muted">No hay personajes registrados que hayan nacido en este planeta.</span>
        </div>
      </div>
    }
  </section>

  <!-- Especies -->
  <section>
    <div class="d-flex align-items-center justify-content-between mb-2">
      <h2 class="h5 mb-0 text-warning sw-section-title">Especies</h2>
      <span class="text-muted small">@(Model.Especies?.Count ?? 0)</span>
    </div>

    @if (Model.Especies != null && Model.Especies.Any())
    {
      <div class="d-flex flex-wrap gap-2">
        @foreach (var e in Model.Especies)
        {
          <a asp-controller="Especies" asp-action="Detalles" asp-route-id="@e.IdEspecie"
             class=" text-bg-dark  text-decoration-none sw-link sw-underline overflow-hidden">
            @e.Nombre
          </a>
        }
      </div>
    }
    else
    {
      <div class="card sw-card">
        <div class="card-body">
          <span class="text-muted">No hay especies originarias de este planeta registradas.</span>
        </div>
      </div>
    }
  </section>

</div>
