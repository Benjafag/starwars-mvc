@using StarWars.ViewModels
@model List<PersonajeIndexVM>

@{
  ViewData["Title"] = "Personajes";
}

<div class="sw-page p-3 p-md-4">

  <div class="d-flex flex-wrap align-items-end justify-content-between gap-2 mb-4">
    <div>
      <h1 class="display-6 fw-bold sw-title mb-1">Archivo de Personajes</h1>
      <p class="text-muted mb-0">Registros activos de la galaxia</p>
    </div>

    <span class="badge text-bg-dark border border-warning-subtle">
      Total: @(Model?.Count() ?? 0)
    </span>
  </div>

  <div class="row g-3">
    @if (Model is not null)
      @foreach (PersonajeIndexVM personaje in Model)
      {
        <div class="col-12 col-sm-6 col-lg-4 col-xl-3">

          <a asp-controller="Personajes" asp-action="Detalles" asp-route-id="@personaje.IdPersonaje"
            class="text-decoration-none text-reset d-block h-100">

            <article class="card sw-card sw-hover h-100 text-center overflow-hidden sw-force">

              <div class="card-body d-flex flex-column align-items-center pt-4">

                <div class="position-relative mb-3">
                  <img src="@(personaje.Foto ?? "/images/placeholder.png")" alt="@personaje.Nombre"
                    class="rounded-circle border shadow-sm sw-avatar-mini"
                    style="width: 120px; height: 120px; object-fit: cover; object-position: top;" />

                  <!-- aro glow -->
                  <span class="sw-ring"></span>
                </div>

                <h2 class="h6 fw-semibold mb-1 sw-title text-truncate w-100">
                  @personaje.Nombre
                </h2>

                <div class="text-muted small sw-hint">
                  Ver registro â†’
                </div>

              </div>

              <!-- holograma suave -->
              <div class="sw-holo"></div>

            </article>

          </a>

        </div>
      }

  </div>
</div>