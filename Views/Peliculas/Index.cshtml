@using StarWars.ViewModels
@model List<PeliculaIndexVM>

@{
  ViewData["Title"] = "Peliculas";
}

<div class="sw-page p-3 p-md-4">
  <div class="text-center mb-4">
    <h1 class="display-6 fw-bold sw-title mb-1">Holocron de Películas</h1>
    <p class="text-muted mb-0">Explorá la filmografía</p>
  </div>

  <div class="row g-3">
    @foreach (PeliculaIndexVM pelicula in Model)
    {
      <div class="col-12 col-sm-6 col-lg-4 col-xxl-3">
        <article class="card sw-card sw-hover h-100 overflow-hidden" style="view-transition-name: contenedor-@pelicula.IdPelicula;">
          <a asp-controller="Peliculas"
             asp-action="Detalles"
             asp-route-id="@pelicula.IdPelicula"
             class="text-decoration-none text-reset">

            <img src="@pelicula.Poster"
                 alt="Poster de @pelicula.Titulo"
                 class="sw-poster img-fluid" 
                 style="view-transition-name: poster-@pelicula.IdPelicula;"/>

            <div class="card-body">
              <h2 class="h6 mb-1 sw-title text-truncate" style="view-transition-name: titulo-@pelicula.IdPelicula;">@pelicula.Titulo</h2>
              <div class="d-flex align-items-center justify-content-between">
                <span class="text-muted small">@pelicula.Anio</span>
                <span class="text-warning small">Ver detalles →</span>
              </div>
            </div>
          </a>
        </article>
      </div>
    }
  </div>
</div>
