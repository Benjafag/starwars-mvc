<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - StarWars</title>

  <script type="importmap"></script>

  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/StarWars.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

  @RenderSection("Styles", required: false)
</head>

<body class="sw-body">
  <header class="sticky-top">
    <nav class="navbar navbar-expand-sm navbar-dark sw-nav border-bottom">
      <div class="container">
        <a class="navbar-brand fw-bold sw-brand" asp-area="" asp-controller="Home" asp-action="Index">
          <img src="~/images/Star-Wars-Logo.png" class="sw-logo-nav" alt="">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav ms-auto gap-sm-1 gap-lg-3">
            <li class="nav-item">
              <a class="nav-link sw-underline py-0 px-1" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link sw-underline py-0 px-1" asp-area="" asp-controller="Personajes"
                asp-action="Index">Personajes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link sw-underline py-0 px-1" asp-area="" asp-controller="Peliculas"
                asp-action="Index">Películas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link sw-underline py-0 px-1" asp-area="" asp-controller="Planetas"
                asp-action="Index">Planetas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link sw-underline py-0 px-1" asp-area="" asp-controller="Actores"
                asp-action="Index">Actores</a>
            </li>
          </ul>
        </div>

      </div>
    </nav>
  </header>

  <!-- Fondo global -->
  <div class="sw-bg">
    <div class="container py-4">
      <main role="main">
        @RenderBody()
      </main>
    </div>

    <footer class="footer mt-4 py-3 sw-footer">
      <div class="container d-flex flex-wrap justify-content-between align-items-center gap-2">
        <span class="text-muted small">&copy; 2026 - StarWars</span>
        <a class="text-decoration-none sw-link small" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </div>
    </footer>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>